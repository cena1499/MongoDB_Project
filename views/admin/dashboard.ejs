<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin page</title>
  </head>
  <body>
    <div class="display" style="background-color: red"></div>
    <h1>Admin dashboard</h1>
    <%- include('../partials/adminNavbar'); %>
    <div class="counter"></div>
    <button class="logout"><a href="/logout">Log Out</a></button>

    <script>
      const div = document.querySelector(".counter");
      const display = document.querySelector(".display");
      const getCount = async () => {
        const res = await fetch("/api/auth/getNumberOfUnconfirmedUsers");
        const data = await res.json();
        let number = `
        <h3>Unconfirmed users: ${data.counter} <a href="/admin/unconfirmedUsers">Confirm users</a></h3>
        `;
        div.innerHTML += number;
      };
      getCount();
    </script>
  </body>
</html>
